{
  "name": "rest-hapi-gen",
  "version": "1.0.0",
  "description": "RESTHapi Gen is a @hapijs/hapi plugin which generates a CRUD RESTful API from a given @hapijs/joi model.",
  "keywords": [
    "hapi",
    "hapi-plugin",
    "joi",
    "api",
    "restful",
    "rest"
  ],
  "main": "lib/index.js",
  "scripts": {
    "release": "release-it",
    "start": "nodemon dev/app.js",
    "test": "jest --watchAll --coverage",
    "test:ci": "jest --coverage --coverageReporters=text-summary"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "node_modules/*"
    ],
    "delay": "2500"
  },
  "jest": {
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "author": "Daniel Arteaga <dani8art.da@gmail.com> (https://darteaga.com)",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@hapi/joi": "^17.1.0",
    "joi-objectid": "^3.0.1",
    "joigoose": "^7.0.0",
    "mongoose": "^5.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@release-it/conventional-changelog": "^1.1.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/hoek": "^9.0.3",
    "@hapi/inert": "^6.0.1",
    "@hapi/vision": "^6.0.0",
    "hapi-swagger": "^12.1.0",
    "jest": "^25.1.0",
    "nodemon": "^1.19.4",
    "release-it": "^12.5.0"
  }
}
